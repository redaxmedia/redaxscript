<?php
namespace Redaxscript;

$setElement = new Html\Element();
$setElement->init('div',
[
	'class' => $admin ? 'rs-admin-js-set-accordion rs-admin-set-accordion' : 'rs-js-set-accordion rs-set-accordion'
]);
$titleElement = new Html\Element();
$titleElement->init('h3',
[
	'class' =>  $admin ? 'rs-admin-js-title-accordion rs-admin-title-accordion' : 'rs-js-title-accordion rs-title-accordion'
]);
$boxElement = new Html\Element();
$boxElement->init('div',
[
	'class' => $admin ? 'rs-admin-js-box-accordion rs-admin-box-accordion' : 'rs-js-box-accordion rs-box-accordion'
]);
?>

<!-- accordion -->

<div class="<?php echo $admin ? 'rs-admin-js-accordion rs-admin-component-accordion' : 'rs-js-accordion rs-component-accordion'; ?>">

	<?php for ($i = 1; $i < 6; $i++): ?>

		<?php echo $setElement
				->copy()
				->addClass($i === 2 ? $admin ? 'rs-admin-js-set-active rs-admin-set-active' : 'rs-js-set-active rs-set-active' : null)
				->html(
					$titleElement
						->copy()
						->addClass($i === 2 ? $admin ? 'rs-admin-js-title-active rs-admin-title-active' : 'rs-js-title-active rs-title-active' : null)
						->text($this->_language->get($i, '_number')) .
					$boxElement
						->copy()
						->addClass($i === 2 ? $admin ? 'rs-admin-js-box-active rs-admin-box-active' : 'rs-js-box-active rs-box-active' : null)
						->text($this->_language->get($i, '_number'))
		); ?>

	<?php endfor; ?>

</div>
