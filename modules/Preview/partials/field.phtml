<?php
namespace Redaxscript;

$suffix = $admin ? '-admin' : '';
$titlePartialElement = new Html\Element();
$titlePartialElement->init('h3', array(
	'class' => 'rs-title-preview-sub'
));
$fieldTextElement = new Html\Element();
$fieldTextElement
	->init('input', array(
		'class' => 'rs-field-default rs-field-text' . $suffix
	))
	->val(Language::get('preview', '_preview'));
$fieldTextareaElement = new Html\Element();
$fieldTextareaElement
	->init('textarea', array(
		'class' => 'rs-field-textarea' . $suffix
	))
	->val(Language::get('preview', '_preview'));
$optionNative = '<option>Placeholder text</option>';
$fieldSelectElement = new Html\Element();
$fieldSelectElement
	->init('select', array(
		'class' => 'rs-field-select' . $suffix
	))
	->html($optionNative . $optionNative . $optionNative);
?>

<!-- field text -->

<?php echo $titlePartialElement->text('.rs-field-text' . $suffix . ' + .rs-field-default'); ?>

<?php echo $fieldTextElement; ?>

<!-- disabled -->

<?php echo $titlePartialElement->text('.rs-field-text' . $suffix . '[disabled] + .rs-field-default'); ?>

<?php echo $fieldTextElement
	->copy()
	->attr('disabled', 'disabled'); ?>

<!-- field textarea -->

<?php echo $titlePartialElement->text('.rs-field-textarea' . $suffix); ?>

<?php echo $fieldTextareaElement; ?>

<!-- disabled -->

<?php echo $titlePartialElement->text('.rs-field-textarea' . $suffix . '[disabled]'); ?>

<?php echo $fieldTextareaElement
	->copy()
	->attr('disabled', 'disabled'); ?>

<!-- small -->

<?php echo $titlePartialElement->text('.rs-field-textarea' . $suffix . '.rs-field-small'); ?>

<?php echo $fieldTextareaElement
	->copy()
	->addClass('rs-field-small'); ?>

<!-- field select -->

<?php echo $titlePartialElement->text('.rs-field-select' . $suffix); ?>

<?php echo $fieldSelectElement; ?>

<!-- disabled -->

<?php echo $titlePartialElement->text('.rs-field-select' . $suffix . '[disabled]'); ?>

<?php echo $fieldSelectElement
	->copy()
	->attr('disabled', 'disabled'); ?>
